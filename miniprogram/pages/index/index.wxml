<!--pages/index/index.wxml-->
<van-search
  value="{{ value }}"
  input-align="center"
  placeholder="请输入搜索关键词"
/>
<swiper indicator-dots="true" autoplay="true">
    <swiper-item wx:for="{{adImg}}" wx:key="index">
      <image src="{{item.img}}"></image>
    </swiper-item>
</swiper>
<van-notice-bar mode="closeable" text="商城维护阶段，仅供内部人员预览。" />
<van-divider contentPosition="center">热卖</van-divider>
<van-grid column-num="3" border="{{ false }}">
  <van-grid-item use-slot wx:for="{{ goodHot }}">
    <image
      style="width: 100%; height: 90px;"
      src="{{item.goods_img}}"
    />
    <text>{{item.goods_name}}</text>
  </van-grid-item>
</van-grid>
<van-divider contentPosition="center">推荐</van-divider>
<van-grid column-num="3" border="{{ false }}">
  <van-grid-item use-slot wx:for="{{ goodRecommend }}">
    <image
      style="width: 100%; height: 90px;"
      src="{{item.goods_img}}"
    />
    <text>{{item.goods_name}}</text>
  </van-grid-item>
</van-grid>
<van-divider contentPosition="center">新品</van-divider>
<van-grid column-num="3" border="{{ false }}">
  <van-grid-item use-slot wx:for="{{ goodNew }}">
    <image
      style="width: 100%; height: 90px;"
      src="{{item.goods_img}}"
    />
    <text>{{item.goods_name}}</text>
  </van-grid-item>
</van-grid>
<van-divider contentPosition="center">全部商品</van-divider>
<van-grid column-num="4">
  <van-grid-item  wx:for="{{ goods }}" 
  icon="{{item.goods_img}}"
  text="{{item.goods_name}}"
   />
</van-grid>